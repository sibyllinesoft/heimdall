# Bifrost Router Environment Configuration

# OpenAI API Key for GPT-5 and reasoning models
OPENAI_API_KEY=sk-your-openai-key-here

# Gemini API Key for direct API access (fallback for OAuth)
GEMINI_API_KEY=AIza-your-gemini-key-here

# OpenRouter API Key for cheap models (DeepSeek R1, Qwen3-Coder)
OPENROUTER_API_KEY=sk-or-your-openrouter-key-here

# Service URLs (override config.yaml)
CATALOG_BASE_URL=http://localhost:8080
TUNING_ARTIFACT_URL=./artifacts/emergency.json

# Database configuration
DATABASE_PATH=./data/catalog.db

# Logging configuration
LOG_LEVEL=info
LOG_FILE=./logs/bifrost.log

# Performance tuning
FEATURE_EXTRACTION_TIMEOUT_MS=25
EMBEDDING_CACHE_SIZE=10000
CATALOG_CACHE_TTL_SECONDS=300

# Milestone 2: Embedding & ANN Configuration
EMBEDDING_SERVICE_URL=http://localhost:8081/embed
EMBEDDING_MODEL=all-MiniLM-L6-v2
FAISS_INDEX_PATH=./.cache/centroids.faiss
NUM_CENTROIDS=100

# OpenRouter Configuration (for cheap bucket)
HTTP_REFERER=https://bifrost-router.com
X_TITLE=Bifrost Router

# Optional: Monitoring
# PROMETHEUS_PORT=9090
# GRAFANA_URL=http://localhost:3000

# Debug flags for Milestone 2
DEBUG_EMBEDDING_FALLBACK=false
DEBUG_FAISS_SEARCH=false
DEBUG_ANTHROPIC_EXCLUSION=false